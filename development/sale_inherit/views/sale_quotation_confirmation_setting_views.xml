<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_inherit_quotation_confirmation" model="ir.ui.view">
        <field name="name">sale.quotation.confirmation.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div/div/div/div/div[@id='confirmation_email_setting']" position="before">
<!--                <field name="quotation_approval_amount"/>-->
                <div class="col-12 col-lg-6 o_setting_box" id="sale_config_quotation_approval_amount">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Quotation Approval Amount</span>
                        <div class="text-muted">
                            Amount to require quotation approval
                        </div>
                        <div class="row mt16">
                            <label for="quotation_approval_amount" string="Amount" class="col-lg-4 o_light_label"/>
                            <field name="quotation_approval_amount" class="oe_inline"/>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

</odoo>
