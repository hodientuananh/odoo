<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_confirmation_email_button" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header/button[@name='action_quotation_send']" position="before">
                <field name="is_request_to_approval" invisible="1"/>
                <field name="is_request_to_approval_trig" invisible="1"/>
                <button name="action_request_to_approval" type="object" string="Request To Approval" attrs="{'invisible': ['|', ('state', 'not in', ['draft']), ('is_request_to_approval_trig','=', True)]}"/>
            </xpath>

            <xpath expr="//form/header/button[@name='action_confirm'][2]" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('state', 'not in', ['draft']), ('is_request_to_approval_trig','=', False)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
